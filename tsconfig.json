{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [],
    "baseUrl": "./",
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "node_modules"
  ]
}
